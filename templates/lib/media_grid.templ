// templates/pages/media_grid.templ
package lib

import "github.com/iankencruz/threefive/internal/services"

// MediaGridStart creates the initial grid with first media item
templ MediaGridStart(media []services.MediaResponse) {
	<div id="media-grid" class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
		for _, m := range media {
			@MediaCard(m)
		}
	</div>
}
