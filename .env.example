
APP_NAME="Threefive"
PORT="8080"
ENV=development

# Session
SESSION_SECRET=your-secret-key-here

# Storage Configuration
STORAGE_PROVIDER=s3  # "local" or "s3"


DATABASE_URL=postgres://user:pass@localhost:5432/threefive?sslmode=disable
GOOSE_DRIVER=postgres
GOOSE_DBSTRING=postgres://user:pass@localhost:5432/threefive?sslmode=disable
GOOSE_MIGRATION_DIR="./migrations/"

# Storage Configuration
STORAGE_TYPE=s3              # "local" or "s3"
UPLOAD_DIR=./uploads         # For local storage
MAX_FILE_SIZE=52428800       # 50MB in bytes

# MinIO Configuration (local development)
S3_BUCKET=threefive-media
S3_REGION=us-east-1
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BASE_URL=http://localhost:9000/threefive-media

# Local Storage (for development)
LOCAL_UPLOAD_DIR=./uploads
LOCAL_BASE_URL=/uploads

